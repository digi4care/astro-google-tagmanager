---
// component: src/components/common/GoogleTagmanagerNoscript.astro
export interface Props {
  id: string;
  domain?: string;
}

const {
  id = "GTM_MEASUREMENT_ID",
  domain = "https://www.googletagmanager.com",
} = Astro.props;
---

<!-- Global site tag (gtm.js) - Google Tagmanager NoScript -->{
  id && (
    <noscript>
      <iframe
        src={`${domain}/ns.html?id=${id}`}
        height="0"
        width="0"
        style="display:none;visibility:hidden"
      />
    </noscript>
  )
}
<!-- Einde Global site tag (gtm.js) - Google Tagmanager NoScript -->
